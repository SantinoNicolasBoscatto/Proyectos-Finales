@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        overflow: hidden;
    }

    .error-image {
        height: 90vh;
        position: relative;
        background-image: url('https://www.wallpaperflare.com/static/735/917/190/back-to-the-future-dr-emmett-brown-movies-christopher-lloyd-wallpaper.jpg');
        background-size: cover;
        margin-top: 0;
        background-attachment: fixed;
        overflow: hidden;
    }

    .over-img-error {
        height: 100%;
        min-height: 90vh;
        overflow: hidden;
        width: 100%;
        background-color: rgba(20, 12, 12, 0.7);
        font-family: "Lato", sans-serif;
        font-weight: 800;
    }

</style>



<section>
    <div class="error-image">
        <div class="over-img-error">
            <h1 class="text-danger mt-4 ms-4">Ha Sucedido un Error en la Carga, Modificacion o Eliminacion de algun Elemento</h1>
            <h4 class="text-danger ms-4">Por favor revise la carga de archivos o los datos ingresados, si el error persiste consulte con el administrador</h4>
        </div>
    </div>
</section>
